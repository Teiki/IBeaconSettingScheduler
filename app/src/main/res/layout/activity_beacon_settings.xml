<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.teiki.estimoteibeacon.BeaconSettingsActivity">

    <Switch
        android:id="@+id/switch_dont_disturb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dont_disturb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"/>

    <Button
        android:id="@+id/distance_dont_disturb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_dont_disturb"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:drawableRight="@android:drawable/ic_menu_add"
        android:text="@string/save_distance" />

</RelativeLayout>
